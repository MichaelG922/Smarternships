<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smarternships">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Smarternships">
        <activity
            android:name=".ui.account.EditAccountActivity"
            android:exported="false" />
        <activity
            android:name=".ui.job.ApplyJobActivity"
            android:exported="false" />
        <activity
            android:name=".ui.job.ViewJobActivity"
            android:exported="false" />
        <activity
            android:name=".ui.account.CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name=".ui.account.CreateAccountDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.account.ViewAccountActivity"
            android:exported="false" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>